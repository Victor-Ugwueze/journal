{
  "name": "journal",
  "version": "1.0.0",
  "description": "Journal is a web platform that allows a users to manage and organize their thought",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start:dev": "NODE_ENV=development  DEBUG=log  nodemon --exec babel-node src/index.js",
    "build": "yarn run clean && yarn run build-server",
    "build-server": "babel src --out-dir dist -s",
    "clean": "rm -rf dist && mkdir dist",
    "start": "./node_modules/.bin/sequelize db:migrate && node dist/index.js",
    "db:migrate": "sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Victor-Ugwueze/journal.git"
  },
  "keywords": [
    "journal",
    "diary"
  ],
  "author": "Victor Ugwueze",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Victor-Ugwueze/journal/issues"
  },
  "homepage": "https://github.com/Victor-Ugwueze/journal#readme",
  "dependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@hapi/joi": "^15.0.1",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-server": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "babel-core": "7.0.0-bridge.0",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "graphql": "^14.2.1",
    "graphql-resolvers": "^0.3.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.13",
    "nodemon": "1.18.8",
    "pg": "^7.9.0",
    "sequelize": "^5.2.13",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "jest": "^24.8.0"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js",
      "<rootDir>/src/middlewares/index.js",
      "<rootDir>/src/modules/requests/__tests__/mocks",
      "<rootDir>/src/modules/travelChecklist/CloudinaryDeletion.js"
    ],
    "testEnvironment": "node"
  }
}
